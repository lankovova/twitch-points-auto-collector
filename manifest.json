{
  "manifest_version": 2,
  "name": "Twitch points auto collector",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["dist/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "dist/popup.html",
    "default_title": "Twitch auto points collector",
    "default_icon": "dist/icon.png"
  },
  "permissions": ["storage"],
  "description": "Automatically collects twitch channel points for you!"
}
